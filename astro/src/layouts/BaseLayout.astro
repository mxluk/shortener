---
// src/layouts/BaseLayout.astro
import '../styles/global.css'; // Import global styles

const { title = 'fuc.moe shortener' } = Astro.props;
---
<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport"
				content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
	<title>{title}</title>
	<style>
		/* Styles specific to the layout's direct children or structure */
		html, body {
			height: 100%;
			width: 100%;
			overflow: hidden; /* Consider if this is always desired */
			display: flex;
			justify-content: center;
			align-items: center;
			font-family: 'Open Sans', sans-serif;
			margin: 0; /* Good practice for body/html */
		}
		main {
			padding: 50px 100px;
			border: 1px solid #000;
			border-radius: 10px;
			box-shadow: 10px 10px 20px rgba(0, 0, 0, 0.2);
			/* Max width can be good for responsiveness */
			/* max-width: 800px; */
			/* width: 90%; */
		}
	</style>
</head>
<body>
<main>
	<slot /> {/* Page content will be injected here */}
</main>
<script src="/jquery-3.7.1.min.js" is:inline></script> {/* Path from public folder */}
</body>
</html>
